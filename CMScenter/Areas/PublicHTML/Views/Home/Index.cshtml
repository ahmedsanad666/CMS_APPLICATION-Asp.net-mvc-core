@*
    news and posts section
*@



<section class="posts py-3">
    @if(culture == "en"){

        <h1 class="container post_header"> <i class="bi bi-calendar2-event ms-3"></i> Posts & Events</h1>
    }else{

            <h2 class="container post_header"> <i class="bi bi-calendar2-event me-3"></i> مقالات و احداث </h2>

    }
    
    
    <div class="owl-carousel owl-theme">
        
        @foreach(var el in Model.posts){

            @if(culture == "en")
            {

                <div class="item">
                    <div class="card">
                        <img src="@el.PostImage" />
                        <div class="text-container">
                            <div class="d-flex align-items-start flex-column">

                                <span class="date"> <i class="bi bi-clock ms-2"></i>@el.postDate.ToLongDateString()</span>
                                <h3>@el.enTitle</h3>
                                <a href="#" class="mt-3 readMore">Read more</a>
                            </div>
                        </div>
                    </div>
                </div>
            }
            else
            {
                <div class="item">
                    <div class="card">
                        <img src="@el.PostImage" />
                        <div class="text-container">
                            <div class="d-flex align-items-start flex-column">

                                <span class="date"> <i class="bi bi-clock ms-2"></i>@el.postDate.ToLongDateString() </span>
                                <h3>@el.arTitle</h3>

                                <a href="#" class="mt-3 readMore">المزيد</a>
                            </div>
                        </div>
                    </div>
                </div>
            }

        }
       
    </div>
</section>

