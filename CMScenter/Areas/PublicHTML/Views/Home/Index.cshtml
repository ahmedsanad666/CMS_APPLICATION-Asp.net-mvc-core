*@
<section>
    <div id="carouselExampleControlsNoTouching" class="carousel slide" data-bs-touch="false">
       
        <div class="carousel-inner">
            <div class="carousel-item active">

                @if(Model.appSettings.SliderImage1 != null)
                {
                    <img src="@Model.appSettings.SliderImage1" class="d-block w-100" alt="...">
                }
               
            </div>
          
            <div class="carousel-item">
                @if (Model.appSettings.SliderImage1 != null)
                {
                    <img src="@Model.appSettings.SliderImage2" class="d-block w-100" alt="...">
                }


            </div>
            <div class="carousel-item">
                @if (Model.appSettings.SliderImage1 != null)
                {
                    <img src="@Model.appSettings.SliderImage3" class="d-block w-100" alt="...">
                }

               
            </div>
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControlsNoTouching" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControlsNoTouching" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
    </div>
</section>
@*
